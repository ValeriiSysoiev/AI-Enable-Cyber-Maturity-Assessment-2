# Production Environment Configuration
# Copy this file to .env.production and fill in actual values

# Azure Resources
AZURE_RESOURCE_GROUP=rg-cybermat-prd
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id

# API Configuration
API_BASE_URL=https://api-cybermat-prd.azurewebsites.net
PROXY_TARGET_API_BASE_URL=https://api-cybermat-prd.azurewebsites.net
WEB_BASE_URL=https://web-cybermat-prd.azurewebsites.net

# Authentication (AAD)
AUTH_MODE=aad
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_CLIENT_SECRET=your-client-secret
NEXTAUTH_URL=https://web-cybermat-prd.azurewebsites.net
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32

# Admin Configuration
ADMIN_EMAILS=admin@yourdomain.com,admin2@yourdomain.com

# Database & Storage
DATA_BACKEND=cosmos
STORAGE_MODE=azure
AZURE_STORAGE_CONNECTION_STRING=your-storage-connection
COSMOS_DB_ENDPOINT=https://your-cosmos.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-key
COSMOS_DB_DATABASE=cybermat-prd

# Service Bus
AZURE_SERVICE_BUS_CONNECTION_STRING=your-service-bus-connection
SERVICE_BUS_NAMESPACE=sb-cybermat-prd

# OpenAI & RAG
RAG_MODE=azure
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-key
AZURE_OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
AZURE_OPENAI_CHAT_MODEL=gpt-4

# Search
AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
AZURE_SEARCH_KEY=your-search-key
AZURE_SEARCH_INDEX_NAME=cybermat-documents

# Performance & Monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600

# S4 Features
ENABLE_S4_FEATURES=true
ENABLE_CSF_GRID=true
ENABLE_WORKSHOPS=true
ENABLE_MINUTES=true
ENABLE_CHAT=true

# Environment
NODE_ENV=production
ENVIRONMENT=production
BUILD_ENV=production
LOG_LEVEL=info