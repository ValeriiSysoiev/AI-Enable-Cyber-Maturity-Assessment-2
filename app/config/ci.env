# CI Environment Configuration
# Disables heavy ML features and non-essential services for testing

# Core CI mode flags
CI_MODE=1
DISABLE_ML=1
TESTING_MODE=1

# Disable heavy Azure services for CI
DISABLE_AZURE_SEARCH=1
DISABLE_AZURE_STORAGE=1
DISABLE_AZURE_SERVICEBUS=1
DISABLE_AZURE_COSMOS=1

# Disable audio/media processing
DISABLE_AUDIO_PROCESSING=1
DISABLE_PPTX_GENERATION=1
DISABLE_PDF_EXTRACTION=1

# Use mocked services for testing
USE_MOCK_STORAGE=1
USE_MOCK_EMBEDDINGS=1
USE_MOCK_TRANSCRIPTION=1

# Lightweight database settings
DATABASE_URL=sqlite:///test.db
COSMOS_ENDPOINT=mock://localhost

# OpenAI settings (use lightweight models if needed)
OPENAI_MODEL_NAME=gpt-3.5-turbo
DISABLE_EXPENSIVE_AI_CALLS=1

# Logging configuration for CI
LOG_LEVEL=WARNING
DISABLE_PERFORMANCE_MONITORING=1