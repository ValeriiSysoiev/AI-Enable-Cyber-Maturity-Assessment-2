diff --git a/Makefile b/Makefile
new file mode 100644
index 0000000000000000000000000000000000000000..10ff1e9f5b87a9a061d12495455b509f1e529c0b
--- /dev/null
+++ b/Makefile
@@ -0,0 +1,14 @@
+SHELL := /bin/bash
+.PHONY: venv deps dev
+
+venv:
+	python3 -m venv .venv
+
+deps:
+	. .venv/bin/activate && python -m pip install --upgrade pip && \
+	find services -name requirements.txt -print0 | xargs -0 -n1 python -m pip install -r && \
+	python -m pip install honcho
+
+dev:
+	[ -f .env ] || cp .env.example .env; \
+	. .venv/bin/activate && honcho start
